generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_URL")
  // relationMode = "prisma" // Add this for MySQL 8+ compatibility
}


model Costumer {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  password    String
  firstName    String?
  lastName    String?
  username String?
  avatar  String?
  role    String
}

model Staff {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  phone         String
  position      String
  department    Department     // Enum will be defined separately
  salary        Float
  hireDate      String
  status        Status     // Enum will be defined separately
  schedule      Json       // Storing the complex schedule structure as JSON
  performance   Json       // Storing performance data as JSON
  certifications String
  notes         String

}

enum Department {
  Kitchen
  Front_of_House
  Management
}

enum Status {
  active
  inactive
  on_leave
}